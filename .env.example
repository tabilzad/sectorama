# Server
PORT=8888
NODE_ENV=development

# SQLite — embedded database for drive registry, schedules, and run metadata
SQLITE_PATH=./sectorama.db

# InfluxDB v2 — time-series storage for SMART history and benchmark speed points
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=dev-token-local
INFLUXDB_ORG=sectorama
INFLUXDB_BUCKET=sectorama
INFLUXDB_ADMIN_PASSWORD=adminpass

# SMART polling interval in minutes.
# Values <60 must divide evenly into 60 (e.g. 5, 10, 15, 30).
# Values >=60 are treated as whole hours (e.g. 60, 120).
SMART_POLL_INTERVAL_MINUTES=60

# Number of evenly-spaced byte-offset positions measured per benchmark run
BENCHMARK_NUM_POINTS=11

# Set to true on Windows/macOS where smartctl and fio cannot access raw block devices.
# Returns synthetic drives and mock SMART/benchmark data for UI development.
DISK_DISCOVERY_MOCK=false
